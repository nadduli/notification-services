# --- EMAIL SERVICE .env ---

# Service Configuration
LOG_LEVEL=INFO
PROMETHEUS_ENABLED=true

# API Key for Authorizing Calls to the User Service (Must match the User Service's list)
USER_SERVICE_API_KEY=API_KEY_EMAIL_SERVICE_123
USER_SERVICE_URL=http://localhost:8000

# RabbitMQ Configuration
# Option 1: Use full URL
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
# Option 2: Use individual components (if RABBITMQ_URL not set, these will be used)
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672

# RabbitMQ Queue/Exchange Names
NOTIFICATIONS_EXCHANGE=notifications.direct
RABBITMQ_EMAIL_QUEUE=email.queue
RABBITMQ_RETRY_EXCHANGE=notifications.retry
RABBITMQ_DLX=notifications.dlx

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_REQUEST_TTL=600

# Template Service
TEMPLATE_SERVICE_URL=http://localhost:9000
TEMPLATE_SERVICE_TOKEN=dev-token

# PostgreSQL Credentials (If Email Service needs direct DB access, though unlikely)
POSTGRES_DB=distributed_database
POSTGRES_USER=shared_user
POSTGRES_PASS=shared_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=dev@example.com
SMTP_PASSWORD=devpass
SMTP_USE_TLS=true

# Circuit Breaker Settings
CIRCUIT_BREAKER_FAIL_MAX=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60

# Retry Settings
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_MAX_ATTEMPTS=5